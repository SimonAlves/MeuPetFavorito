<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Adicione aqui os elementos de design para o fundo -->
    <item>
        <shape
            android:shape="rectangle">
            <!-- Cor de fundo -->
            <solid android:color="#edecdf" /> <!-- Substitua com a cor desejada -->
            <!-- Cor da borda e largura (opcional) -->
            <stroke
                android:width="1dp"
                android:color="#edecdf" /> <!-- Substitua com a cor desejada -->
            <!-- Raio do canto (opcional) -->
            <corners
                android:radius="8dp" /> <!-- Substitua com o raio desejado -->
        </shape>
    </item>
</layer-list>
